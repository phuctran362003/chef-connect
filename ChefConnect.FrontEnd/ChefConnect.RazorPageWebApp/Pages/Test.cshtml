@page
@model ChefConnect.RazorPageWebApp.Pages.TestModel
@{
    ViewData["Title"] = "Weather Forecast";
}

<h1>Weather Forecast</h1>

@if (Model.WeatherForecasts != null && Model.WeatherForecasts.Any())
{
    <ul>
        @foreach (var forecast in Model.WeatherForecasts)
        {
            <li>
                <strong>@forecast.Date.ToString("yyyy-MM-dd"):</strong>
                @forecast.TemperatureC°C - @forecast.Summary
            </li>
        }
    </ul>
}
else
{
    <p>No weather data available.</p>
}
